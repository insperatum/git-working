#!/bin/bash

g-update && g_updated=1
if [ "$g_updated" -eq 1 ]; then $0 $@; exit; fi # Update && re-execute

git checkout master
git push origin master
git checkout working
git reset 'working@{1}' # This should be top of the working branch
git merge -X theirs --no-edit master
git push origin working

g-update
